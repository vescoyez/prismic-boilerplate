mixin button(content)
  -const tag = attributes.href ? 'a' : 'button'
  -const colorClass = { blue: 'bg-blue-500 text-white', red: 'bg-red-500 text-white' }[attributes.color]
  -const disabledClass = attributes.disabled ? 'opacity-50 cursor-not-allowed' : 'hover_opacity-75'
  -const sizeClass = { sm: 'px-6 py-4 text-sm', md: 'px-8 py-5 text-lg' }[attributes.size || 'md']
  -shownAttr = attributesExcept(attributes, ['color', 'size'])
  #{tag}.rounded.inline-flex.items-center.justify-center.text-center.leading-tight.focus_outline-none.focus_shadow-outline.transition.duration-150.ease-in-out&attributes(shownAttr)(class=[colorClass, disabledClass, sizeClass])
    block
